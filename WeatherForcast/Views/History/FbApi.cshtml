@model IEnumerable<Entity.ViewWeatherHistoryApi>

@{
    ViewData["Title"] = "Lịch sử api weather";
    Layout = "~/Views/Share/_Layout.cshtml";
}

<div class="jumbotron">
    <h1>Lịch sử người dùng xem thời tiết api weather</h1>
</div>

<div class="table-responsive">
    <table class="table table-hover table-bordered" id="tbTable">
        <thead class="text-md-center">
            <tr>
                <th>
                    FacebookID
                </th>
                <th>Tên</th>
                <th>
                    Thời gian
                </th>
                <th>
                    Thành phố
                </th>
                <th>
                    Nhiệt độ
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FacebookId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @item.CreatedDate.ToString("dd.MM.yyyy hh:mm:ss")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.Raw(item.Temperature)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
